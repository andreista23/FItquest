@page
@model FitQuest.Pages.Account.AdminRegisterModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body">

                <h3 class="text-center mb-3">🛡 Admin Register</h3>
                <p class="text-muted text-center mb-4">
                    Creează cont admin doar cu un cod valid.
                </p>

                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label>Username</label>
                        <input asp-for="Input.Username" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>

                    <div class="mb-3">
                        <label>Email</label>
                        <input asp-for="Input.Email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <input asp-for="Input.Password" type="password" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Confirm password</label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Admin code</label>
                        <input asp-for="Input.AdminCode" type="password" class="form-control" />
                    </div>

                    <button class="btn btn-warning w-100">
                        Create Admin Account
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}