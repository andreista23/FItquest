@page
@model FitQuest.Pages.Activities.IndexModel

@{
    ViewData["Title"] = "Activities";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Your Activities</h2>
        <p class="text-muted mb-0">Track your workouts and progress</p>
    </div>

    <a class="btn btn-success btn-lg shadow-sm" asp-page="/Activities/Add">
        + Add Activity
    </a>
</div>

@if (!Model.Activities.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <h5 class="fw-semibold mb-2">No activities yet</h5>
            <p class="text-muted mb-4">
                Start your fitness journey by adding your first activity.
            </p>
            <a asp-page="/Activities/Add" class="btn btn-outline-success">
                Add your first activity
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var a in Model.Activities)
        {
            var evidence = a.Evidences?
            .OrderByDescending(e => e.UploadedAt)
            .FirstOrDefault();

            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 activity-card">

                    <div class="card-body d-flex flex-column">

                        <!-- HEADER -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="fw-bold mb-0">@a.Type</h5>

                            @if (a.Status == FitQuest.Models.ActivityStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (a.Status == FitQuest.Models.ActivityStatus.Approved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </div>

                        <!-- INFO -->
                        <div class="mb-3 text-muted small">
                            <div>
                                ⏱ <strong>@a.Duration</strong> minutes
                            </div>
                            <div>
                                📅 @a.Date.ToLocalTime().ToString("dd MMM yyyy")
                            </div>
                        </div>

                        <div class="mt-auto">
                            @if (evidence != null)
                            {
                                <a class="btn btn-outline-primary w-100"
                                   href="@evidence.FilePath"
                                   target="_blank">
                                    View evidence
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary w-100" disabled>
                                    No evidence uploaded
                                </button>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <style>
        .activity-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .activity-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,.08);
            }
    </style>
}
