@page
@model FitQuest.Pages.Friends.IndexModel
@{
    ViewData["Title"] = "Friends";
}

<h2 class="mb-4">🤝 Friends</h2>

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="mb-3">📨 Cereri primite</h5>

                @if (!Model.IncomingRequests.Any())
                {
                    <div class="text-muted">Nu ai cereri noi.</div>
                }
                else
                {
                    @foreach (var r in Model.IncomingRequests)
                    {
                        <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
                            <div>
                                <strong>@r.Requester.Name</strong>
                                <div class="text-muted small">@r.Requester.Email</div>
                            </div>
                            <div class="d-flex gap-2">
                                <form method="post" asp-page-handler="Accept">
                                    <input type="hidden" name="friendshipId" value="@r.Id" />
                                    <button class="btn btn-sm btn-success">Accept</button>
                                </form>
                                <form method="post" asp-page-handler="Decline">
                                    <input type="hidden" name="friendshipId" value="@r.Id" />
                                    <button class="btn btn-sm btn-outline-secondary">Decline</button>
                                </form>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="mb-3">👥 Prietenii mei</h5>

                @if (!Model.Friends.Any())
                {
                    <div class="text-muted">Nu ai prieteni încă.</div>
                }
                else
                {
                    @foreach (var f in Model.Friends)
                    {
                        <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
                            <div>
                                <strong>@f.Name</strong>
                                <div class="text-muted small">@f.Email</div>
                            </div>
                            <a class="btn btn-sm btn-primary"
                               asp-page="/Friends/Dashboard"
                               asp-route-userId="@f.Id">
                                Vezi dashboard
                            </a>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="card shadow-sm mt-3">
            <div class="card-body">
                <h5 class="mb-3">🔎 Caută utilizatori</h5>

                <form method="post" asp-page-handler="Search" class="d-flex gap-2">
                    <input class="form-control" name="Search" value="@Model.Search" placeholder="Nume sau email..." />
                    <button class="btn btn-outline-primary">Search</button>
                </form>

                @if (Model.SearchResults.Any())
                {
                    <div class="mt-3">
                        @foreach (var u in Model.SearchResults)
                        {
                            <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
                                <div>
                                    <strong>@u.Name</strong>
                                    <div class="text-muted small">@u.Email</div>
                                </div>

                                <form method="post" asp-page-handler="SendRequest">
                                    <input type="hidden" name="toUserId" value="@u.Id" />
                                    <button class="btn btn-sm btn-success">Add</button>
                                </form>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-outline-dark" asp-page="/Leaderboard/Friends">🏆 Friends Leaderboard</a>
</div>