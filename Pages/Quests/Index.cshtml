@page
@model FitQuest.Pages.Quests.IndexModel

@{
    ViewData["Title"] = "My Quests";
}

<h2 class="mb-3">🎯 My Quests</h2>

@if (Model.ActiveQuests.Count == 0)
{
    <div class="alert alert-info">
        Nu ai questuri active momentan. Revino mai târziu.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var uq in Model.ActiveQuests)
        {
            var q = uq.Quest;
            var percent = FitQuest.Pages.Quests.IndexModel.CalcPercent(uq.Progress, q.Target);

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-1">@q.Title</h5>
                            <div class="d-flex gap-2">
                                <span class="badge bg-warning text-dark">@q.Type</span>

                                @if (!q.IsActive)
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        </div>


                        @if (!string.IsNullOrWhiteSpace(q.Description))
                        {
                            <p class="text-muted small mb-2">@q.Description</p>
                        }

                        <div class="mb-2">
                            <div class="small text-muted">
                                Progress: <strong>@uq.Progress</strong> / <strong>@q.Target</strong>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar" role="progressbar" style="width: @percent%"></div>
                            </div>
                            <div class="small text-muted mt-1">@percent%</div>
                        </div>

                        <div class="d-flex justify-content-between small text-muted">
                            <span>🏆 Reward: <strong>@q.RewardXP XP</strong></span>
                            <span>⏱ @q.Period</span>
                        </div>

                        <div class="small text-muted mt-2">
                            Assigned: @uq.AssignedAt.ToLocalTime().ToString("yyyy-MM-dd")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<hr class="my-4" />

<h4 class="mb-3">✅ Completed (last 10)</h4>

@if (Model.CompletedQuests.Count == 0)
{
    <div class="alert alert-secondary">
        Nu ai completat încă questuri.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Quest</th>
                    <th>Reward</th>
                    <th>Completed</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var uq in Model.CompletedQuests)
                {
                    <tr>
                        <td>@uq.Quest.Title</td>
                        <td>@uq.Quest.RewardXP XP</td>
                        <td>@(uq.CompletedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "—")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
