@{
    string currentPage = ViewContext.RouteData.Values["page"]?.ToString()?.ToLower() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitQuest</title>

    <!-- Bootstrap local -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fitquest.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f5f7fa;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
        }
        /* Asigură spațiu sub navbar-ul fix */
        .content-wrapper {
            padding-top: 90px;
        }
        /* Efect navbar scrolled */
        .navbar {
            transition: background-color 0.3s ease;
        }

            .navbar.scrolled {
                background-color: #202020 !important;
            }
    </style>
</head>

<body>
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow fixed-top">
            <div class="container">

                <!-- LOGO + BRAND -->
                <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                    <img src="~/images/fitquest_logo.png" width="40" class="me-2" alt="FitQuest logo" />
                    FitQuest
                </a>

                <!-- MOBILE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU -->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link @(currentPage.Contains("/dashboard") ? "active" : "")"
                               asp-page="/Dashboard/Index">Dashboard</a>
                        </li>

                        <!-- ACTIVITIES DROPDOWN -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="activitiesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Activities
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="activitiesDropdown">
                                <li>
                                    <a class="dropdown-item" asp-page="/Activities/Activities">Activities</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Activities/Add">Add Activity</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentPage.Contains("/quests") ? "active" : "")"
                               asp-page="/Quests/Index">Quests</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentPage.Contains("/premium") ? "active" : "")"
                               asp-page="/Premium/Index">Premium</a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link" asp-page="/Validation/Index">Validate</a>
</li>

                    </ul>


                    <!-- RIGHT -->
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- NOTIFICATIONS -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    🔔
                                    @if ((ViewBag.UnreadNotifications ?? 0) > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @ViewBag.UnreadNotifications
                                        </span>
                                    }
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end p-2 shadow" style="width: 320px;">
                                    <li class="px-2 pb-2 border-bottom">
                                        <span class="fw-semibold">Notifications</span>
                                    </li>

                                    @if (ViewBag.Notifications != null && ViewBag.Notifications.Count > 0)
                                    {
                                        @foreach (var n in ViewBag.Notifications)
                                        {
                                            <li class="px-2 py-2 small border-bottom">
                                                @n.Message
                                                <div class="text-muted" style="font-size: 0.75rem;">
                                                    @n.CreatedAt.ToLocalTime().ToString("dd MMM yyyy, HH:mm")
                                                </div>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="px-2 py-3 small text-muted">No notifications yet.</li>
                                    }
                                </ul>
                            </li>

                            <!-- USER -->
                            <li class="nav-item me-3 d-flex align-items-center">
                                <span class="navbar-text text-light">
                                    Hello, @User.Identity.Name!
                                </span>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Logout" class="d-inline">
                                    <button class="btn btn-outline-warning btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning" asp-page="/Account/Register">Register</a>
                            </li>
                        }

                    </ul>


                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <div class="container content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted bg-dark text-light py-3 mt-5">
        <div class="container text-center">
            © 2025 - FitQuest
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Navbar scroll effect
        document.addEventListener("scroll", () => {
            const nav = document.querySelector(".navbar");
            if (window.scrollY > 10) nav.classList.add("scrolled");
            else nav.classList.remove("scrolled");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
