@page
@model FitQuest.Pages.Admin.LogsModel

@{
    ViewData["Title"] = "Admin Logs";
}

<h2 class="mb-4">🧾 Admin Logs</h2>

@if (!Model.Logs.Any())
{
    <div class="alert alert-info">
        No admin actions recorded.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Admin</th>
                <th>Action</th>
                <th>Target</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.Admin.Name</td>
                    <td>@log.Action</td>
                    <td>@log.Target</td>
                    <td>@log.Timestamp.ToLocalTime()</td>
                </tr>
            }
        </tbody>
    </table>
}
